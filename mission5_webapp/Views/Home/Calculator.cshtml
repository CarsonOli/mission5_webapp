@{
    ViewData["Title"] = "Tutoring Calculator";
}

<h2 class="mb-4 text-center">Magic: The Gathering Tutoring Calculator</h2>

<div class="row justify-content-center">
    <div class="col-md-6">

        <!-- Hours Input -->
        <div class="mb-3">
            <label for="hours" class="form-label">Number of Hours Needed</label>
            <input type="number" id="hours" class="form-control" min="1" />
            <div id="hoursError" class="text-danger mt-1"></div>
        </div>

        <!-- Hourly Rate (Non-editable) -->
        <div class="mb-3">
            <label for="rate" class="form-label">Hourly Rate ($)</label>
            <input type="text" id="rate" class="form-control" value="25" readonly />
        </div>

        <!-- Calculate Button -->
        <div class="mb-3 text-center">
            <button id="calculateBtn" class="btn btn-primary">
                Calculate Total
            </button>
        </div>

        <!-- Output -->
        <div class="mb-3">
            <label for="total" class="form-label">Total Cost ($)</label>
            <input type="text" id="total" class="form-control" readonly />
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}
